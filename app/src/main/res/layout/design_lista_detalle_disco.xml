<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/paddingDctoPadre"
            android:orientation="horizontal"
            android:weightSum="6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toRightOf="@+id/photoRestaurante"
                android:layout_weight="5">

                <android.support.v7.widget.CardView
                    android:layout_width="85dp"
                    android:layout_height="115dp"
                    android:layout_marginRight="@dimen/paddingDcto"
                    app:cardCornerRadius="10dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:id="@+id/photoRestaurante"
                        android:layout_alignParentTop="true"
                        android:src="@mipmap/background_login"
                        />
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/nombreRestaurante"
                                    android:ellipsize="end"
                                    android:textStyle="bold"
                                    android:lines="2"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/nombreRestaurante"
                                    android:textColor="@color/nombreRestaurante"
                                    android:text="Fiesta Gourmet Restaurtant - Lince"
                                    />
                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtCategoria"
                                android:text="RESTAURANTE"
                                android:layout_marginTop="@dimen/marginDcto"
                                android:textSize="@dimen/textoSmalDscto"
                                android:layout_below="@+id/nombreRestaurante"
                                />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center|center_horizontal"
                                android:layout_marginTop="@dimen/marginDcto"
                                android:layout_marginRight="@dimen/marginDcto">


                                <android.support.v7.widget.AppCompatRatingBar
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:numStars="5"
                                    android:rating="3.5"
                                    android:theme="@style/RatingBar"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:isIndicator="true"
                                    android:id="@+id/appCompatRatingBarDcto" />

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:id="@+id/ratingText"
                                    android:textSize="@dimen/textoSmalDscto"
                                    android:textColor="@color/ratingText"
                                    android:text="3.5"
                                    android:maxLines="1"/>

                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/horaDscto"
                                android:layout_marginBottom="10dp"
                                android:textSize="@dimen/textoSmalDscto"
                                android:text="AHORA"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/idProveedor"
                                android:layout_marginBottom="10dp"
                                android:textSize="@dimen/textoSmalDscto"
                                android:visibility="gone"
                                android:text="AHORA"
                                />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center|center_horizontal"
                                android:layout_gravity="center|center_horizontal"
                                android:background="@mipmap/ticket"
                                >
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center|center_horizontal"
                                    android:paddingLeft="13dp"
                                    android:paddingRight="13dp"
                                    >

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/ticket"
                                        android:textSize="28dp"
                                        android:textStyle="bold"
                                        android:text="100"
                                        android:paddingTop="3dp"
                                        android:textColor="@color/ticketText"
                                        />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="28dp"
                                        android:textStyle="bold"
                                        android:text="%"
                                        android:paddingTop="3dp"
                                        android:textColor="@color/ticketText"
                                        />
                                </LinearLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/dcto"
                                    android:gravity="center_horizontal"
                                    android:textColor="@color/ticketText"
                                    android:paddingBottom="5dp"
                                    android:textSize="@dimen/textoDscto"
                                    android:text="DSCTO"
                                    />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/marginDcto"
                        android:weightSum="8"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_gravity="bottom"
                            >
                            <ImageView
                                android:layout_width="@dimen/tamañoIconsDcto"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_reloj"
                                android:layout_gravity="bottom"
                                android:layout_marginRight="@dimen/marginDctoIcons"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textColor="@color/azulDscto"
                                android:layout_marginRight="@dimen/marginabierto"
                                android:gravity="center_vertical"
                                android:id="@+id/abierto"
                                android:textSize="@dimen/textoSmalDscto"
                                android:text="ABIERTO"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="8"
                            >
                            <ImageView
                                android:layout_width="@dimen/tamañoIconsDcto"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_position"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/marginDctoIcons"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/azulDscto"
                                android:gravity="center_vertical"
                                android:lines="2"
                                android:layout_marginRight="5dp"
                                android:id="@+id/position"
                                android:textSize="@dimen/textoSmalDscto"
                                android:text="a 5Km - San Juan de Lurigancho"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:gravity="right">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center_vertical"
                                android:id="@+id/favorito"
                                android:src="@drawable/ic_favorito_plomo"

                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/linerview"
        android:layout_gravity="bottom"/>

</LinearLayout>
