<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/background"
    tools:context=".view.activity.LoginActivity">

        <LinearLayout
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingLeft="32dp"
            android:layout_marginTop="60dp"
            android:paddingRight="32dp"
            android:gravity="center">

            <!--Titutlo -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:src="@mipmap/group_22" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_iniciar_sesion2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:hint="Ingrese su correo"
                app:hintTextAppearance="@style/FloatingLabel">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/input_iniciar_sesion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:theme="@style/EditText"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_contrasenia2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese su contraseÃ±a"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                app:hintTextAppearance="@style/FloatingLabel"
                android:layout_marginTop="20dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/input_contrasenia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:textColor="@android:color/white"
                    android:theme="@style/EditText"
                    android:inputType="textPassword"/>

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
            android:id="@+id/txt_recuperar_clave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:textColor="@color/color_texto_login"
            android:maxLines="1"
            android:padding="12dp"
            android:paddingTop="18dp"
            android:text="@string/texto_olvido_contrasena" />

    <Button
        android:id="@+id/btn_ingreso"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/iniciar_sesion"
        android:textColor="@color/color_text_boton_inciar"
        android:padding="16dp"
        android:layout_above="@+id/txt_recuperar_clave"
        android:textSize="@dimen/texto_boton_naranja"
        android:textAllCaps="false"
        android:background="@color/button_slide"
        android:theme="@style/AppTheme.Button.iniciar" />

    </LinearLayout>

</LinearLayout>

